
@{
    ViewBag.Title = "Reset Password";
}



<div class="login">
    <div class="container ">
        <div class="row text-center">
            <div class="col-sm-5 col-sm-offset-4 col-md-5 col-md-offset-4 col-lg-5 col-lg-offset-4">
                <h3 class="text-left">Reset Password</h3>
                <hr>
                <div class="form-signin">
                    @using (Html.BeginForm("ResetPassword", "Admin", new { uname = Request.QueryString["uname"] }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-4 col-sm-4">  <label>Security Code:</label></div>
                            <div class="col-md-48 col-sm-8">   <input type="password" name="securitycode" class="form-control input-sm" /></div>
                        </div>
                        <div class="form-group input-group">
                            <span class="input-group-btn"><button type="submit" class="btn btn-primary" id="sendmessage" value="Send">RESET PASSWORD OF @Request.QueryString["uname"]</button> <a class="btn btn-warning btn-SM" href="@Url.Action("Users","Admin")" title="Go Back">BACK TO USERS </a></span>
                        </div>
                    }
                    <h5 class="text-left text-custom-one">@ViewBag.Message</h5>
                </div>

            </div>
        </div>
    </div>
</div>