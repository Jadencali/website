@model SabongPinoy.Models.CardInquiryViewModel
@{
    ViewBag.Title = "SetCard";
}

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2 ">
            <section id="entryform">
                <div class="container">
                    <div class="row text-center ">
                        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                            <div class="panel panel-primary">
                                <div class="panel-heading text-left">
                                    <i class="ion-card"></i> Card Setup
                                    <div class="pull-right">
                                        <div class="btn-group open">
                                            <a class=" btn btn-default btn-xs" href="@Url.Action("Users", "Admin")" title="Go Back"><i class="ion ion-arrow-left-b fa-fw"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                    <div class="form-wrapper">

                                        <hr />
                                        @using (Html.BeginForm("SetCard", "Admin", new { uid = Request.QueryString["uid"], un = Request.QueryString["un"], cid = Request.QueryString["cid"] }, FormMethod.Post, new { @class = "form-horizontal text-left" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true)

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Username, new { @class = "control-label col-sm-4" })
                                                <div class="col-sm-8">
                                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control input-sm" })
                                                    <div class="error-div small">
                                                        @Html.ValidationMessageFor(model => model.Username)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.CardId, new { @class = "control-label col-sm-4" })
                                                <div class="col-sm-8">


                                                    @Html.TextBoxFor(model => model.CardId, new { @class = "form-control input-sm autofocus", @autofocus = "autofocus" })





                                                    <div class="error-div small">
                                                        @Html.ValidationMessageFor(model => model.CardId)
                                                    </div>
                                                </div>
                                            </div>
                                            <hr />
                                            <div class="form-actions no-margin-bottom text-right">
                                                @*@if (string.IsNullOrEmpty(@Request.QueryString["cid"]))
                                                {*@
                                                    <input type="submit" value="SAVE CARD" class="btn btn-primary" />
                                                @*}*@

                                            </div>
                                            <h5 class="text-left text-custom-one">@ViewBag.Message</h5>
                                        }
                                    </div>
                              
                          
                            </div>
                        </div>
                </div>

            </section>
        </div>
    </div>
</div>

