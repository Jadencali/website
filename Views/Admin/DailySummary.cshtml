@model IEnumerable<SabongPinoy.Models.PROC_DailyTransactionsSummary_GetByDateSearch_Result>
@{
    ViewBag.Title = "Daily Audit";
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <style type="text/css">
        .bolder {
            font-size: 15px !important;
        }
    </style>
}

<div id="home">
    <div class="container">
        <div id="services">
            <div class="row">
                <div class="col-sm-11 col-sm-offset-1 col-md-11 col-md-offset-1 col-lg-11 col-lg-offset-1 ">
                    <div class="panel panel-primary">
                        <div class="panel-heading text-left">
                            <i class="ion-ios-people"></i> Daily Summary
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="form-wrapper">
                                <h3 class="text-left text-custom-one"></h3>
                                <hr />
                                @using (Html.BeginForm("DailySummary", "Admin", FormMethod.Get))
                                {
                                    <fieldset>
                                        <legend>Search by date</legend>
                                        @Html.Label("StartDate", "Start Date:")
                                        <input class="startdate input-smBlack" id="startdate" name="startdate" type="date" value="">
                                        @Html.Label("enddate", "End Date:")
                                        <input class="enddate input-smBlack" id="enddate" name="enddate" type="date" value="">
                                        <input type="text" name="searchString" class="input-lg" placeholder="search here">
                                        <input type="submit" value="SEARCH" />
                                    </fieldset>
                                }

                                <table class="table table-striped table-hover text-dark-space text-left table-responsive">
                                    <thead class="text-center">
                                        <tr>
                                            <th>Username</th>
                                            <th>Load Type</th>
                                            <th>Points</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="text-red">
                                                        @item.UserName
                                                    </td>
                                                    <td class="text-red">
                                                        @item.LoadedFrom
                                                    </td>
                                                    <td class="text-right">
                                                        @if (item.Points.HasValue)
                                                        {
                                                            if (item.Points.Value > 0)
                                                            {
                                                                <span class="label label-primary bolder "> @item.Points.Value.ToString("###,###.##")</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="label label-danger bolder"> @item.Points.Value.ToString("###,###.##")</span>
                                                            }

                                                        }

                                                    </td>



                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
