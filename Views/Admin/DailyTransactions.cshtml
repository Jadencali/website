@model IEnumerable<SabongPinoy.Models.PROC_Transactions_GetByDateSearch_Result1>
@{
    ViewBag.Title = "DailyTransactions";
    <script src = "~/Scripts/jquery-ui-1.12.1.min.js" ></script>

}

<div id="home">
    <div class="container">
        <div id="services">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1 ">
                    <div class="panel panel-primary">
                        <div class="panel-heading text-left">
                            <i class="ion-ios-people"></i> Daily Transactions
                            <div class="pull-right">
                                <div class="btn-group open">
                                    <a class="btn btn-default btn-xs" href="@Url.Action("AdminView", "Admin")" title="Go Back"><i class="ion ion-arrow-left-b fa-fw"></i></a>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="form-wrapper">
                                <h3 class="text-left text-custom-one"></h3>
                                <hr />
                                @using (Html.BeginForm("DailyTransactions", "Admin", FormMethod.Get))
                                {
                                <fieldset>
                                    <legend>Search criteria</legend>
                                    @Html.Label("StartDate", "Start Date:")
                                    <input class="startdate input-smBlack" id="startdate" name="startdate" type="date" value="">
                                    @Html.Label("enddate", "End Date:")
                                    <input class="enddate input-smBlack" id="enddate" name="enddate" type="date" value="">
                                    <input type="text" name="searchString" class="input-lg" placeholder="search here">
                                    <input type="submit" value="SEARCH" />
                                </fieldset>
                                }

                                <table class="table table-striped table-hover text-dark-space text-left ">
                                    <thead class="text-center">
                                        <tr>

                                            <th>Username</th>
                                            <th>Load Type</th>
                                            <th>Points</th>
                                            <th>Date</th>
                                            <th>Notes</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                        <tr>
                                            <td class="text-red">
                                                @item.Username
                                            </td>
                                            <td class="text-red">
                                                @item.LoadedFrom
                                            </td>
                                            <td>
                                                @if (item.Points.HasValue)
                                                {
                                                    @item.Points.Value.ToString("##,###,###.##")
                                                }
                                            </td>
                                            <td>
                                                @item.LocalDateTime.Value.ToString("MM/dd/yyy")
                                            </td>

                                            <td class="text-red">
                                                @item.Notes
                                            </td>
                                        </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
