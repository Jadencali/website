@model List<SabongPinoy.Models.DCurrentBets>

@{
    ViewBag.Title = "Open Bets";
}

<div id="home">
    <div class="container">
        <div id="services">
            <div class="row">
                <div class="col-xs-12  col-sm-12 col-md-12 col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading text-left">
                            <span><i class="ion ion-cash fa-fw"></i>Open Bets</span>
                            <div class="pull-right">
                                <div class="btn-group open">
                                    <a href="@Request.Url.AbsoluteUri" class="btn  btn-xs btn-danger " title="refresh">Refresh</a>
                                    <a class=" btn btn-default btn-xs" href="@Url.Action("ArenaGames", "Admin", new { agid = @Request.QueryString["agid"], aid = @Request.QueryString["aid"] })" title="Go Back"><i class="ion ion-arrow-left-b fa-fw"></i></a>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="form-wrapper table-responsive">
                                <table class="table table-striped table-responsive table-hover text-dark-space text-left small">
                                    <thead class="text-center">
                                        <tr>
                                            <th>BetId</th>
                                            <th>Username</th>
                                            <th>Arena</th>
                                            <th>Date</th>

                                            <th>Fight No</th>
                                            <th>Bet</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @item.UserBetId
                                            </td>
                                            <td>
                                                @item.Username
                                            </td>
                                            <td>
                                                @item.ArenaName
                                            </td>
                                            <td>
                                                @item.DateOfFight.ToString("MM/dd/yyyy")
                                            </td>

                                            <td>
                                                @item.GameNumber
                                            </td>
                                            <td>
                                                @item.BetOn
                                            </td>
                                            <td class=" text-right ">
                                                @item.MatchedAmount.ToString("###,##0.00")
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <ul class="pagination pagination-sm">
                            @for (int p = 1; p <= ViewBag.TotalPage; p++)
                            {
                                <li class="@(p == ViewBag.CurrentPage ? "active" : " ")">
                                    <a href="@Url.Action("MyReports", "MySabong", new { page = @p })"> @p </a>
                                </li>
                            }
                        </ul>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

