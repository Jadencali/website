@model SabongPinoy.Models.GameFormViewModel
@{
    ViewBag.Title = "Game";

    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>

    <script type="text/javascript">
        $(function () { // will trigger when the document is ready
            $('.datepicker').datepicker({
                format: 'mm/dd/yyyy',
                startDate: '1d',
                todayHighlight: true,
            }); //Initialise any date pickers
        });
    </script>
}


<div id="home">
    <div class="container">
        <div id="services">
            <div class="row">
                <div class=" col-md-10 col-md-offset-1 ">
                    <div class="panel panel-default">
                        <div class="panel-heading text-left">
                            <i class="ion-ios-people"></i> Game
                            <div class="pull-right">
                                <div class="btn-group open">
                                    <a class=" btn btn-default btn-xs" href="@Url.Action("Games","Admin")" title="Go Back"><i class="ion ion-arrow-left-b fa-fw"></i> </a>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="form-wrapper">
                                <h3 class="text-left text-custom-one">Game Information</h3>
                                <hr />
                                @using (Html.BeginForm("GameForm", "Admin", new { aid = Request.QueryString["gid"] }, FormMethod.Post, new { @class = "form-horizontal text-left" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <div class="error-div small">
                                        <p class="alert-danger"> @ViewBag.Message</p>
                                    </div>
                                    <div class="form-group text-dark-mid">
                                        @Html.LabelFor(model => model.Game.GameName, new { @class = "control-label col-sm-4" })
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(model => model.Game.GameName, new { @class = "form-control input-sm " })
                                            <div class="error-div small">
                                                @Html.ValidationMessageFor(model => model.Game.GameName)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group text-dark-mid">
                                        @Html.LabelFor(model => model.Game.GameDate, new { @class = "control-label col-sm-4" })
                                        <div class="col-sm-3 text-dark-mid">
                                            @Html.TextBoxFor(model => model.Game.GameDate, "{0:MM/dd/yyyy}", new { @class = "form-control input-sm text-muted  datepicker " })
                                            <div class="error-div small">
                                                @Html.ValidationMessageFor(model => model.Game.GameDate)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group text-dark-mid">
                                        @Html.LabelFor(model => model.Game.GameType, new { @class = "control-label col-sm-4" })
                                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                            @Html.DropDownListFor(model => model.Game.GameType, Model.GameType, null, new { @class = "form-control input-sm" })
                                            <div class="error-div small">
                                            </div>
                                        </div>
                                    </div>
                                     <div class="form-group text-dark-mid">
                                        @Html.LabelFor(model => model.Game.NumberOfSlots, new { @class = "control-label col-sm-4" })
                                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                            @Html.TextBoxFor(model => model.Game.NumberOfSlots, new { @class = "form-control input-sm" })
                                            <div class="error-div small">
                                                @Html.ValidationMessageFor(model => model.Game.NumberOfSlots)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group text-dark-mid">
                                        @Html.LabelFor(model => model.Game.BetAmount, new { @class = "control-label col-sm-4" })
                                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                            @Html.TextBoxFor(model => model.Game.BetAmount, new { @class = "form-control input-sm" })
                                            <div class="error-div small">
                                                @Html.ValidationMessageFor(model => model.Game.BetAmount)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group text-dark-mid">
                                        @Html.LabelFor(model => model.Game.WinningAmount, new { @class = "control-label col-sm-4" })
                                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                            @Html.TextBoxFor(model => model.Game.WinningAmount, new { @class = "form-control input-sm" })
                                            <div class="error-div small">
                                                @Html.ValidationMessageFor(model => model.Game.WinningAmount)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group text-dark-mid">
                                        @Html.LabelFor(model => model.Game.ShowInHome, new { @class = "control-label col-sm-4" })
                                        <div class="col-sm-8">
                                            @Html.CheckBoxFor(model => model.Game.ShowInHome.Value, new { @class = "checkbox pull-left" })
                                            <div class="error-div small">
                                                @Html.ValidationMessageFor(model => model.Game.ShowInHome)
                                            </div>
                                        </div>
                                    </div>
                                    
                                     <div class="form-group text-dark-mid">
                                        @Html.LabelFor(model => model.Game.CanCancel, new { @class = "control-label col-sm-4" })
                                        <div class="col-sm-8">
                                            @Html.CheckBoxFor(model => model.Game.CanCancel.Value, new { @class = "checkbox pull-left" })
                                            <div class="error-div small">
                                                @Html.ValidationMessageFor(model => model.Game.CanCancel)
                                            </div>
                                        </div>
                                    </div>
                                    
                                     <div class="form-group text-dark-mid">
                                    @Html.LabelFor(model => model.Game.GameStatus, new { @class = "control-label col-sm-4" })
                                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                        @Html.DropDownListFor(model => model.Game.GameStatus, Model.GameStatus, null, new { @class = "form-control input-sm" })
                                        <div class="error-div small">
                                        </div>
                                    </div>
                                </div>

                                    <div class="form-actions no-margin-bottom text-right">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                }
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


