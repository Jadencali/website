@model SabongPinoy.Models.DUserBets
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>eGameCashier.com - Payout</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/styles.css" rel="stylesheet" />
    <script>
        $(function () {
            $("#txtSearch").focus();
        });

        function clickToPrint() {
           var ubetID =  $("#uBetId").html();
            $.ajax({
                cache: false,
                url: '/Arena/UpdateData',
                data: { userBetId: ubetID },
                dataType: "json",
                type: "POST",
                cache: false,
                success: function (data) {
                    if (data.success) {
                        //alert(data.message);
                        Popup($('#printThis').html());
                        window.close();
                    }
                },
                error: function (xhr) {
                    alert(xhr.responseText);
                }
            });
        }


        function Popup(data) {
            var myWindow = window.open('', 'PRINT', 'height=400,width=600');
            myWindow.document.write('<html><head><title></title>');
            myWindow.document.write('</head><body style="text-transform:uppercase;font-family: Lucida Console, Courier, monospace;font-size:11px;">');
            myWindow.document.write(data);
            myWindow.document.write('</body></html>');

            myWindow.print();
            myWindow.close();

            return true;
        }

    </script>

    <style type="text/css">
        @@media print {
            @@page {
                size: 8.5in 11in;
                padding: 0;
                margin: 10%;
            }

            html, body {
                position: relative;
                width: 100%;
                height: 100%;
                max-width: 100%;
                max-height: 97%;
                margin: 0;
                padding: 0;
                text-align: center;
            }

            svg {
                width: 100%;
                height: 100%;
                max-width: 100%;
                max-height: 100%;
            }

            table {
                width: 100%;
                height: 40vh;
                table-layout: fixed;
            }

                table tr th {
                    text-align: center;
                    font-family: Tahoma;
                    padding-left: 20px;
                    padding-top: 10px;
                    padding-right: 20px;
                }

                table tr td {
                    text-align: left;
                    font-size: 25px;
                    text-transform: uppercase;
                }

                    table tr td.title {
                        text-align: left;
                        font-size: 25px;
                        font-weight: bold;
                        text-transform: uppercase;
                    }

            #printThis {
                padding-top: 25px;
                width: 900px;
                background-color: #fff;
                clear: both;
                display: block;
                margin: 0 auto;
                
            }
        }
    </style>
</head>
<body>

                @if (Model != null)
                {
    <div id="printThis">
        <div class="col-md-12 text-left ">
            <span>
                @Model.ArenaName
            </span>
        </div>
        <div class="col-md-12 text-left ">
            <span>
                Bet Id:<span id="uBetId"> @Model.UserBetId</span>
            </span>
        </div>
        <div class="col-md-12 text-left ">
            <span>
                Date: @Model.LocalDateTime
            </span>
        </div>
        <div class="col-md-12 text-left ">
            <span>
                Fight #: @Model.GameNumber
            </span>
        </div>
        <div class="col-md-12 text-left ">
            <span>
                Bet On: @Model.BetOn
            </span>
        </div>
        <div class="col-md-12 text-left ">
            <span>
                Bet Amount: @Model.MatchedAmount.ToString("###,###,###")
            </span>
        </div>


        @if (@Model.IsCancelDraw == 0)
        {
            <div class="col-md-12 text-left ">
                <span>
                    Payout Amount: @Model.Total
                </span>
            </div>
        }

        else
        {
            <div class="col-md-12 text-left ">
                <span>
                    Payout Amount: CANCEL/DRAW
                </span>
            </div>
        }

    </div>
                    <div class="col-md-12 text-left ">
                        <span>
                            PAID: @Model.IsPaid
                        </span>
                    </div>
                    <div class="col-md-12 text-left ">
                        <span>
                            PAID By: @Model.PaidBy
                        </span>
                    </div>
                    <script>window.print();</script>
                }
</body>
</html>
