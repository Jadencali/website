@model SabongPinoy.Models.DUserBets
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>eGameCashier.com - Bet</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/styles.css" rel="stylesheet" />





    <script src="~/Scripts/JsBarcode.all.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <style type="text/css">
        @@media print {
            @@page {
                /* size: 297mm 210mm;*/
                /* margin: 0;*/
                size: 8.5in 11in;
                padding: 0;
                margin: 10%;
            }

            html, body {
                position: relative;
                width: 100%;
                height: 100%;
                max-width: 100%;
                max-height: 97%;
                margin: 0;
                padding: 0;
                text-align: center;
            }

            svg {
                width: 100%;
                height: 100%;
                max-width: 100%;
                max-height: 100%;
            }

            table {
                width: 100%;
                height: 40vh;
                table-layout: fixed;
            }

                table tr th {
                    text-align: center;
                    font-family: Tahoma;
                    padding-left: 20px;
                    padding-top: 10px;
                    padding-right: 20px;
                }

                table tr td {
                    text-align: left;
                    font-size: 40px;
                    text-transform: uppercase;
                    text-transform: uppercase;
                    font-family: Lucida Console, Courier, monospace;
                }

                    table tr td.title {
                        text-align: left;
                        font-size: 40px;
                        font-weight: bold;
                        text-transform: uppercase;
                        text-transform: uppercase;
                        font-family: Lucida Console, Courier, monospace;
                    }

            #printDiv {
                padding-top: 25px;
                width: 900px;
                background-color: #fff;
                clear: both;
                display: block;
                margin: 0 auto;
            }
        }
    </style>
    <script>
        $(function () {
            $("#txtSearch").focus();

             JsBarcode("#code128", @Request.QueryString["id"], {
                format: "CODE128",
                  width: 5,
                  height: 50,
                  displayValue: true
        });
        });
    </script>


</head>
<body>
    @using (Html.BeginForm("GetBarcode", "Arena", FormMethod.Get))
    {
        <div class="form-group input-group form-group-sm">
            <input type="text" name="SearchString" id="txtSearch" class="form-control" placeholder="BET ID">
            <span class="input-group-btn">
                <button type="submit" class="btn btn-info btn-sm ">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    }
    @if (Model != null)
    { 
        
    
    }
    </body>
</html>
