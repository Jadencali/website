@model SabongPinoy.Models.PasaloadViewModel

@{
    ViewBag.Title = "Pasaload";
}

<div id="home">
    <div class="container">
        <div id="services">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1 ">
                    <div class="panel panel-primary">
                        <div class="panel-heading text-left">
                            <i class="ion-ios-people"></i> Pasaload
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="form-wrapper">
                                <h3 class="text-left text-custom-one">
                                    <span class="text-info"> Pasaload</span>
                                </h3>
                                <hr />
                                @using (Html.BeginForm("Pasaload", "MyService", new { uid = @Request.QueryString["uid"], un = @Request.QueryString["un"] }, FormMethod.Post, new { @class = "form-horizontal text-left well" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <div class="row">
                                        <div class="error-div small">
                                            <p class="alert-danger">@Html.ValidationMessage("ErrorMessage")</p>
                                            <p class="alert-danger">@ViewBag.Message</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group text-dark-mid">
                                            @Html.LabelFor(model => model.LoadTo, new { @class = "control-label col-sm-4" })
                                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                                @Html.TextBoxFor(model => model.LoadTo, new { @class = "form-control input-sm" })
                                                <div class="error-div small">
                                                    @Html.ValidationMessageFor(model => model.LoadTo)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group text-dark-mid">
                                            @Html.LabelFor(model => model.Points, new { @class = "control-label col-sm-4" })
                                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                                @Html.TextBoxFor(model => model.Points, new { @class = "form-control input-sm" })
                                                <div class="error-div small">
                                                    @Html.ValidationMessageFor(model => model.Points)
                                                </div>

                                            </div>
                                        </div>
                                        <div class="form-actions no-margin-bottom text-right col-sm-8">
                                            <input type="submit" value="Save" name="UserLoad" class="btn btn-danger" />
                                        </div>

                                    </div>
                                }
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
