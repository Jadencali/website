@{
    ViewBag.Title = "Watch Live Fights";

}
<div id="home">
    <div class="row ">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
            
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 small nopadding">
                        <div class="panel panel-default ">
                            <div id='mediaplayer' class="embed-responsive embed-responsive-16by9">
                          

                                            <script src="~/Scripts/flowplayer/flowplayer-3.2.13.min.js"></script>
                                            <a class="player"
                                               style="display:block;width:425px;height:300px;margin:10px auto"
                                               id="streams">
                                            </a>
                                            <script>
                                                $f("streams", "../Scripts/flowplayer/flowplayer-3.2.18.swf", {
                                                    clip: {

                                                        provider: 'rtmp',
                                                        live: true,
                                                        url: 'ch1',

                                                        onStart: function () {
                                                            this.setVolume(50);
                                                        }
                                                    },
                                                    plugins: {
                                                        controls: {
                                                            scrubber: false,
                                                            fullscreen: false
                                                        },



                                                        rtmp: {
                                                            url: "../Scripts/flowplayer/flowplayer.rtmp-3.2.13.swf",
                                                            netConnectionUrl: 'rtmp://sabongbatangas-live:80.i-cttech.com/live'
                                                        }
                                                    }
                                                });
                                            </script>
                                     

                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>



</div>
