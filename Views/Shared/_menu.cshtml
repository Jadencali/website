                @if (User.Identity.IsAuthenticated)
                {
                    <li class="active">
                        <a> @User.Identity.Name ( <span id="lblMainTotalPoints" class="hidden">@ViewBag.MainTotalPoints.ToString("###,##0.##")</span> )</a>
                    </li>
                    <li class="">@Html.ActionLink("Logout", "Logout", "Account")</li>
