                            <li>@Html.ActionLink("Events", "Arena", "Admin")</li>
                            @if (ViewBag.WithUsers)
                            {
                                <li>@Html.ActionLink("Users", "Users", "Admin")</li>
                            }
                            @if (ViewBag.IsAdminViewer)
                            {
                                <li>@Html.ActionLink("Daily Reports", "DailyReport", "Admin")</li>
                                <li>@Html.ActionLink("Admin View", "AdminView", "Admin")</li>
