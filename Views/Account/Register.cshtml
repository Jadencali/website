@model SabongPinoy.Models.UserLoginProfileViewModel

@{
    ViewBag.Title = "Register";
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}


        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-2 col-md-108 col-md-offset-2 col-lg-10 col-lg-offset-2 ">
                    <div class="container">
                        <div class="row text-center ">
                            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                                <div class="form-wrapper">
                                    <h3 class="text-left text-custom-one">Registration Form</h3>
                                    <h4>
                                        Please contact CSR using your real Facebook account for account verification and activation. 
                                    </h4>
                                    <hr />
                                    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.Return }, FormMethod.Post, new { @class = "form-horizontal text-left" }))
                                {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.UserLogin.Username, new { @class = "control-label col-sm-4" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.UserLogin.Username, new { @class = "form-control input-sm" })
                                                <div class="error-div small">
                                                    @Html.ValidationMessageFor(model => model.UserLogin.Username)
                                                    @Html.ValidationMessage("UsernameExist")
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.NewPassword, new { @class = "control-label col-sm-4" })
                                            <div class="col-sm-8">
                                                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control input-sm" })
                                                <div class="error-div small">
                                                    @Html.ValidationMessageFor(model => model.NewPassword)
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ComparePassword, new { @class = "control-label col-sm-4" })
                                            <div class="col-sm-8">
                                                @Html.PasswordFor(model => model.ComparePassword, new { @class = "form-control input-sm" })
                                                <div class="error-div small">
                                                    @Html.ValidationMessageFor(model => model.ComparePassword)
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.UserProfile.LastName, new { @class = "control-label col-sm-4" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.UserProfile.LastName, new { @class = "form-control input-sm" })
                                                <div class="error-div small">
                                                    @Html.ValidationMessageFor(model => model.UserProfile.LastName)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.UserProfile.FirstName, new { @class = "control-label col-sm-4" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.UserProfile.FirstName, new { @class = "form-control input-sm" })
                                                <div class="error-div small">
                                                    @Html.ValidationMessageFor(model => model.UserProfile.FirstName)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.UserProfile.Email, new { @class = "control-label col-sm-4" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.UserProfile.Email, new { @class = "form-control input-sm" })
                                                <div class="error-div small">
                                                    @Html.ValidationMessageFor(model => model.UserProfile.Email)
                                                    @Html.ValidationMessage("EmailExist")
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-actions no-margin-bottom text-right">
                                            <input type="submit" value="Register" class="btn btn-primary" />
                                        </div>
                                }
                                </div>

                            </div>
                        </div>
                    </div>
            </div>
        </div>

