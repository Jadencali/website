@model SabongPinoy.Models.UserLoginProfileViewModel
@{
    ViewBag.Title = "Change Password";
}
<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2 ">
            <section id="entryform">
                <div class="container">
                    <div class="row text-center ">
                        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                            <div class="form-wrapper">
                                <h3 class="text-left text-custom-one">Change Password</h3>
                                <hr />
                                @using (Html.BeginForm("ChangePassword", "MySabong",null, FormMethod.Post, new { @class = "form-horizontal text-left" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                     @Html.HiddenFor(model => model.UserLogin.User_Id)
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.UserLogin.Username, new { @class = "control-label col-sm-4" })
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(model => model.UserLogin.Username, new { @class = "form-control input-sm", @readonly = "" })
                                            <div class="error-div small">
                                                @Html.ValidationMessageFor(model => model.UserLogin.Username)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NewPassword, new { @class = "control-label col-sm-4" })
                                        <div class="col-sm-8">
                                            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control input-sm" })
                                            <div class="error-div small">
                                                @Html.ValidationMessageFor(model => model.NewPassword)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ComparePassword, new { @class = "control-label col-sm-4" })
                                        <div class="col-sm-8">
                                            @Html.PasswordFor(model => model.ComparePassword, new { @class = "form-control input-sm" })
                                            <div class="error-div small">
                                                @Html.ValidationMessageFor(model => model.ComparePassword)
                                            </div>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-actions no-margin-bottom text-right">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                     <h5 class="text-left text-custom-one">@ViewBag.Message</h5>
                                }
                            </div>

                        </div>
                    </div>
                </div>

            </section>
        </div>
    </div>
</div>

