@model IQueryable<SabongPinoy.Models.v_UsersAgentsCommission>

@{
    ViewBag.Title = "Commission";
}

<div id="home">
    <div class="container">
        <div id="services">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1 ">
                    <div class="panel panel-primary">
                        <div class="panel-heading text-left">
                            <span><i class="ion ion-ios-people fa-fw"></i>Commission Breakdown</span>
                            <div class="pull-right">
                                <div class="btn-group open">
                                    <a class=" btn btn-default btn-xs" href="@Url.Action("Members","MySabong")" title="Go Back"><i class="ion ion-arrow-left-b fa-fw"></i> </a>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="form-wrapper table-responsive">
                                <table class="table table-responsive table-striped table-hover  text-dark-space text-left small">
                                    <thead class="text-center">
                                        <tr>
                                            <th>User Name</th>
                                        <th>Total Commission</th>
                                            <th>Agent</th>
                                            <th>Commission</th>
                                            <th>Year</th>
                                            <th>Month</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {


                                        <tr>
                                            <td class="fa fa-cro">
                                                @item.Username
                                            </td>
                                            <td>
                                            <td class="text-red">
                                                @string.Format("{0:n}", @item.Commission)

                                            </td>
                                            <td>
                                                @item.Agent
                                            </td>
                                            <td class="text-red">
                                               
                                                @string.Format("{0:n}", Convert.ToDouble(item.Commission.Value) * 0.03)
                                            </td>
                                            <td>
                                                @item.YearCommission
                                            </td>
                                            <td>
                                                @item.MonthCommission
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>


                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
